/* 个人中心页面样式 */

page {
    background-color: #F5F7FB;
}

.userHeadPic {
    width: 100%;
    height: 387rpx;
    background-color: #fff;
    position: relative;
    text-align: center;
    margin-bottom: 30rpx;
}

.userHeadPic image {
    width: 180rpx;
    height: 180rpx;
    margin: 74rpx auto 0;
    border-radius: 50%;
    padding: 4rpx;
    box-sizing: border-box;
    background: radial-gradient(#fff, #eee);
}

.userHeadPic .userName {
    font-size: 26rpx;
    color: #333333;
    font-size: 600;
}

.vipTime {
    margin-bottom: 30rpx;
}

.control-info {
    height: 400rpx;
    width: 100%;
}

.weui-cells:before,
.weui-cells:after {
    border: none;
}

.weui-cell:before {
    border: none;
}

.weui-cell__bd {
    color: #333;
    font-size: 28rpx;
}

.weui-cell {
    padding: 40rpx 52rpx;
    height: 100rpx;
    box-sizing: border-box;
}

.disabled-time {
    color: #A2A2A2;
    font-size: 24rpx;
    width: 214rpx;
    display: flex;
    justify-content: space-between;
}