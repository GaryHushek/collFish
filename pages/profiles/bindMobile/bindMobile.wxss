/* 绑定手机号页面样式 */

page {
    background-color: #F4F4F4;
    height: 100%;
}

.input {
    width: 100%;
    height: 100%;
    padding-top: 180rpx;
}

input {
    width: 610rpx;
    height: 110rpx;
    background-color: #fff;
    border-radius: 55px;
    font-size: 28rpx;
    padding-left: 50rpx;
    margin: 0 auto;
}

.input .phone {
    margin-top: 180rpx;
    margin-bottom: 50rpx;
}

.input .vCode {
    margin-bottom: 50rpx;
    position: relative;
}

.input .vCode text.sendVCode {
    position: absolute;
    left: 458rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 200rpx;
    height: 30rpx;
    z-index: 999;
    color: #666666;
    font-size: 26rpx;
    padding: 0rpx;
    line-height: 30rpx;
}

.input .vCode button.sendVCode {
    position: absolute;
    left: 458rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 150rpx;
    height: 70rpx;
    z-index: 999;
    color: white;
    font-size: 26rpx;
    padding: 0rpx;
    line-height: 70rpx;
    background-color: rgba(255, 135, 46, 0.82);
}

.input .info {
    text-align: center;
    font-size: 26rpx;
    color: #C0C0C0;
}

.bind {
    width: 480rpx;
    height: 88rpx;
    border-radius: 44rpx;
    box-shadow: 26rpx 2rpx 65rpx rgba(255, 135, 46, 0.82);
    color: white;
    font-size: 30rpx;
    margin-top: 236rpx;
    line-height: 88rpx;
}