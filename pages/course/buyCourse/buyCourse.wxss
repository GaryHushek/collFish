/* 会员购买页面样式 */

page {
  background-color: #e7e7e7;
}

.top-bar {
  padding: 35rpx 0rpx;
  box-sizing: border-box;
  height: 420rpx;
}

.vip-card {
  height: 350rpx;
  /* 强制不换行 */
  white-space: nowrap;
  box-sizing: border-box;
}

.vip-card .item {
  display: inline-block;
  height: 350rpx;
  width: 626rpx;
  margin-left: 24rpx;
}
.vip-card .item:last-child {
  margin-right: 24rpx;
}
.vip-card .item image {
  width: 100%;
  height: 100%;
}
.vipInfo {
  padding: 55rpx 0 0 50rpx;
  font-size: 30rpx;
  color: #666;
  background-color: #fff;
  box-sizing: border-box;
  height: 786rpx;
}
.vipInfo .title {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 34rpx;
}
.vipInfo .content {
  line-height: 72rpx;
}
.vipInfo .buy {
  display: block;
  width: 480rpx;
  height: 88rpx;
  background: rgba(255, 135, 46, 1);
  border-radius: 44rpx;
  box-shadow: 26rpx 2rpx 65rpx rgba(255, 135, 46, 0.82);
  color: white;
  font-size: 30rpx;
  margin: 210rpx auto 0;
}
